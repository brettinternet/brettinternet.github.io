{
  "name": "brettinternet.github.io",
  "private": true,
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "prestart": "run-s clean start:eleventy",
    "start": "run-p \"start:eleventy -- --watch\" start:webpack",
    "start:webpack": "webpack-dev-server --config config/webpack.dev.js",
    "start:eleventy": "eleventy --config config/eleventy.js --quiet",
    "build": "run-s clean build:eleventy build:webpack",
    "build:webpack": "cross-env NODE_ENV=production webpack -p --config config/webpack.prod.js",
    "build:eleventy": "cross-env NODE_ENV=production eleventy --config config/eleventy.js",
    "postbuild": "run-s feed",
    "clean": "ts-node -P bin/tsconfig.json bin/clean",
    "feed": "cross-env NODE_ENV=production ts-node -P bin/tsconfig.json bin/feed",
    "gifs": "ts-node -P bin/tsconfig.json bin/gifs",
    "deploy": "gh-pages -d build -b master",
    "lint": "run-s lint:*",
    "lint:scripts": "eslint '*/**/*.{js,ts}'",
    "lint:styles": "stylelint -s sass 'src/styles/**/*.sass'",
    "commit": "git-cz"
  },
  "dependencies": {
    "feather-icons": "^4.28.0",
    "lazysizes": "^5.2.2",
    "lodash": "^4.17.20",
    "tailwindcss": "^1.8.4",
    "typeface-fira-code": "^1.1.4",
    "typeface-lato": "0.0.75",
    "typeface-patua-one": "0.0.71",
    "typeface-roboto-slab": "^1.1.4"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@prettier/plugin-pug": "^1.5.1",
    "@types/fs-extra": "^9.0.1",
    "@types/jsdom": "^16.2.4",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.6.4",
    "@types/sharp": "^0.26.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.1.0",
    "browserlist": "^1.0.1",
    "chokidar": "^3.4.2",
    "commitizen": "^4.2.1",
    "copy-webpack-plugin": "^6.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^4.2.2",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "^3.3.0",
    "domutils": "^2.4.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-node": "^11.1.0",
    "feed": "^4.2.1",
    "file-loader": "^6.1.0",
    "fs-extra": "^9.0.1",
    "gh-pages": "^3.1.0",
    "glob": "^7.1.6",
    "html-loader": "^1.3.0",
    "html-webpack-inline-svg-plugin": "^2.3.0",
    "html-webpack-plugin": "^4.4.1",
    "husky": "^4.2.5",
    "jsdom": "^16.4.0",
    "lint-staged": "^10.3.0",
    "markdown-it": "^11.0.1",
    "markdown-it-anchor": "^5.3.0",
    "mini-css-extract-plugin": "^0.11.0",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss-discard-comments": "^4.0.2",
    "postcss-loader": "^4.0.2",
    "preload-webpack-plugin": "^3.0.0-beta.4",
    "prettier": "^2.1.1",
    "purgecss-webpack-plugin": "^3.0.0",
    "resolve-url-loader": "^3.1.1",
    "responsive-loader": "^2.1.1",
    "sass": "^1.26.10",
    "sass-loader": "^10.0.2",
    "sharp": "^0.26.0",
    "stylelint": "^13.7.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "terser-webpack-plugin": "^4.1.0",
    "toml": "^3.0.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.3",
    "webpack-subresource-integrity": "^1.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/scripts/**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/styles/**/*.sss": [
      "stylelint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not IE_Mob 11",
    "maintained node versions"
  ]
}
